<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#70B237</item>
        <item name="colorPrimaryVariant">#70B237</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RadioGroup">
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">#70B237</item>
    </style>

    <style name="Brown">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#61371F</item>
    </style>

    <style name="LightBrown">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#854F2B</item>
    </style>

    <style name="CheckBox">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">#8FCA5C</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
    </style>

    <style name="Button">
        <item name="android:background">#000000</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop</item>
    </style>
</resources>

